<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:PassMeta.DesktopApp.Ui.ViewModels"
             x:Class="PassMeta.DesktopApp.Ui.Views.SettingsView"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             d:DataContext="{d:DesignInstance viewModels:SettingsViewModel}">
    <Grid>
        <TextBlock VerticalAlignment="Top" 
                   HorizontalAlignment="Center" 
                   Margin="0 40 0 0"
                   FontSize="30"
                   Text="{Binding Title}"/>
        
        <TextBlock VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Margin="23 100 0 0"
                   FontSize="16"
                   Text="API"/>
        
        <TextBox VerticalAlignment="Top"
                 HorizontalAlignment="Left"
                 Margin="20 130 0 0"
                 Width="400"
                 Text="{Binding ServerUrl}"
                 Watermark="https://"/>
        
        <TextBlock VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Margin="23 180 0 0"
                   FontSize="16"
                   Text="{Binding LocalizationLabel}"/>
        
        <ComboBox VerticalAlignment="Top"
                  HorizontalAlignment="Left"
                  Margin="20 210 0 0"
                  Width="200"
                  SelectedIndex="{Binding CultureIndex}">
            <ComboBoxItem Content="{Binding Lang[0][0]}"/>
            <ComboBoxItem Content="{Binding Lang[1][0]}"/>
        </ComboBox>
        
        <Button VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="20 270 0 0"
                Content="{Binding SaveBtnContent}"
                Click="SaveBtn_OnClick"/>
    </Grid>
</UserControl>
