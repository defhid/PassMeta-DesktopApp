<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:storage="clr-namespace:PassMeta.DesktopApp.Ui.ViewModels.Storage"
        xmlns:com="clr-namespace:PassMeta.DesktopApp.Common;assembly=PassMeta.DesktopApp.Common"
        xmlns:pf="clr-namespace:PassMeta.DesktopApp.Ui.Constants"
        mc:Ignorable="d"
        Width="520"
        Height="265"
        MinWidth="520"
        MinHeight="265"
        MaxWidth="520"
        MaxHeight="265"
        x:Class="PassMeta.DesktopApp.Ui.Views.Storage.PassFileWindow"
        Icon="/Assets/PassMeta.ico"
        Title="{Binding Title}"
        WindowStartupLocation="CenterOwner">
    
    <Design.DataContext>
        <storage:PassFileWindowViewModel></storage:PassFileWindowViewModel>
    </Design.DataContext>
    
    <Grid Margin="7 7 10 10"
          RowDefinitions="Auto,*">
        <Grid Grid.Row="0"
              ColumnDefinitions="Auto,*"
              RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Margin="0 0 20 10"
                       VerticalAlignment="Center"
                       Opacity="0.7"
                       Text="{x:Static com:Resources.PASSFILE__LABEL_NAME}"/>
            
            <TextBox Grid.Row="0" Grid.Column="1"
                     Margin="0 0 0 10"
                     Text="{Binding Name}"
                     AttachedToVisualTree="NameTextBox__OnAttachedToVisualTree"/>
            
            <TextBlock Grid.Row="1" Grid.Column="0"
                       Margin="0 0 20 10"
                       VerticalAlignment="Center"
                       Opacity="0.7"
                       Text="{x:Static com:Resources.PASSFILE__LABEL_COLOR}"/>
            
            <ComboBox Grid.Row="1" Grid.Column="1" 
                      Margin="0 0 0 10"
                      Width="180"
                      FontWeight="Bold"
                      FontStyle="Italic"
                      SelectedIndex="{Binding SelectedColorIndex}"
                      Items="{x:Static pf:PassFileColor.List}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" 
                                   Foreground="{Binding Brush}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            
            <TextBlock Grid.Row="2" Grid.Column="0"
                       Margin="0 0 20 10"
                       VerticalAlignment="Center"
                       Opacity="0.7"
                       Text="{x:Static com:Resources.PASSFILE__LABEL_PWD}"/>
            
            <Grid Grid.Row="2" Grid.Column="1"
                  ColumnDefinitions="Auto,Auto"
                  Margin="0 0 0 10">
                <TextBox Grid.Column="0" 
                         Margin="0 0 10 0"
                         Padding="3 2 5 2"
                         Height="26" MinHeight="26" MaxHeight="26"
                         Width="280"
                         VerticalContentAlignment="Center"
                         PasswordChar="*"
                         Text="{Binding Password}"
                         IsVisible="{Binding IsPasswordBoxVisible}"/>
                
                <ToggleButton Grid.Column="1"
                        Padding="0"
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Width="26" Height="26"
                        FontFamily="Segoe MDL2 Assets"
                        Content="{Binding PasswordBtn.Content}"
                        IsVisible="{Binding PasswordBtn.IsVisible}"
                        IsChecked="{Binding IsPasswordBoxVisible}"/>
            </Grid>
            
            <TextBlock Grid.Row="3" Grid.Column="0"
                       Margin="0 0 20 10"
                       Opacity="0.7"
                       Text="{x:Static com:Resources.PASSFILE__LABEL_CREATED_ON}"/>
            
            <TextBlock Grid.Row="3" Grid.Column="1"
                       Margin="0 0 0 10"
                       Text="{Binding CreatedOn}"/>
            
            <TextBlock Grid.Row="4" Grid.Column="0"
                       Margin="0 0 20 10"
                       Opacity="0.7"
                       Text="{x:Static com:Resources.PASSFILE__LABEL_CHANGED_ON}"/>
            
            <TextBlock Grid.Row="4" Grid.Column="1"
                       Margin="0 0 0 10"
                       Text="{Binding ChangedOn}"/>
            
            <TextBlock Grid.Row="5" Grid.Column="0"
                       Margin="0 0 20 10"
                       Opacity="0.7"
                       Text="{x:Static com:Resources.PASSFILE__LABEL_STATE}"/>
            
            <Grid Grid.Row="5" Grid.Column="1"
                  ColumnDefinitions="Auto,*">
                <Ellipse Grid.Column="0" 
                         Width="8" Height="8"
                         Margin="0 0 6 10"
                         VerticalAlignment="Center"
                         Fill="{Binding StateColor}"/>  
                
                <TextBlock Grid.Column="1"
                           Text="{Binding State}"/>
            </Grid>
        </Grid>
        
        <Grid Grid.Row="1"
              ColumnDefinitions="Auto,*"
              VerticalAlignment="Bottom">
            <Button Grid.Column="0" 
                    Margin="0 0 10 0"
                    MinWidth="50"
                    HorizontalContentAlignment="Center"
                    Content="{Binding OkBtn.Content}"
                    Command="{Binding OkBtn.Command}"
                    AttachedToVisualTree="OkBtn__OnAttachedToVisualTree"/>
            
            <Grid Grid.Column="1"
                  ColumnDefinitions="*,Auto,Auto">
                <Button Grid.Column="0" 
                        HorizontalAlignment="Right"
                        Margin="0 0 0 0"
                        Opacity="0.5"
                        Content="{x:Static com:Resources.PASSFILE__BTN_MERGE}" 
                        IsVisible="{Binding MergeBtn.IsVisible}"
                        Command="{Binding MergeBtn.Command}"/>
            
                <Button Grid.Column="2" 
                        Margin="12 0 0 0"
                        Opacity="0.8"
                        Content="{x:Static com:Resources.PASSFILE__BTN_DELETE}"
                        IsVisible="{Binding DeleteBtn.IsVisible}"
                        Command="{Binding DeleteBtn.Command}"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
